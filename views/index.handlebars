
<div class="container">
    
      <h1>Enjoy Your Burger</h1>
      <img src="/images/burgerImg.png" alt="honey" id="img"> 
  
<div class='not-devoured'>
<h2>To be Devoured</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class='devoured'>
  <h2>Devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}
      </p>
    </li>
    {{/if}}
  {{/each}}
</ul>
  
</div>

  <h2>Add Burger</h2>
  <form class="addburger-form">
    <textarea type="text" id="brg" name="burger_name"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>



 